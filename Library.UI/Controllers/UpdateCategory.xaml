<Window x:Class="UpdateCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.UI"
        mc:Ignorable="d"
        Title="UpdateCategory" Height="292" Width="700" AllowsTransparency="True" WindowStyle="None" Background="Transparent">
    <Grid Margin="0,0,0,250">
        <Canvas Height="301" VerticalAlignment="Top">
            <Label Content="KATEGORİ GÜNCELLEME PENCERESİ" Canvas.Left="193" Canvas.Top="71" Width="304" Panel.ZIndex="3" FontFamily="Comic Sans MS" FontSize="16" FontWeight="Bold" Foreground="#FFF9F9F9" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Rectangle Fill="Chocolate" Height="30" Width="440" Canvas.Left="130" Canvas.Top="70" HorizontalAlignment="Center" VerticalAlignment="Top" Panel.ZIndex="2"/>
            <Border  Height="150" Width="440" Canvas.Left="130" Canvas.Top="100" Background="#f9f9f9" CornerRadius="0,0,50,50" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Border.Effect>
                    <DropShadowEffect Opacity="0.35" Direction="275"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>

                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Grid.Row="0" BorderBrush="#f0e9d9" BorderThickness="0,0,0,1">
                        <Label Content="Kategori Adı :" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontFamily="Comic Sans MS" Foreground="#FF37251C" FontWeight="Bold" Background="#FFF9F9F9" />
                    </Border>
                    <TextBox x:Name="tbxSelectedModelId" Visibility="Hidden" Text="{Binding Id, Mode=TwoWay}"/>
                    <Border Grid.Column="1" Grid.Row="0" Height="50">
                        <TextBox TextWrapping="Wrap" Background="#99F9F9F9" FontFamily="Comic Sans MS" BorderBrush="Transparent" BorderThickness="1,1,1,1"
                                Foreground="#FF37251C" FontWeight="Bold" Padding="40,10" FontSize="20"
                                x:Name="tbxSelectedModelCategoryName"  Text="{Binding Name, Mode=TwoWay}" />
                    </Border>
                    <Image Grid.Column="0" Grid.Row="8" x:Name="CloseWindow" Source="/Img/Close.png" Cursor="Hand" MouseDown="CloseWindow_Click" Style="{DynamicResource imageButton}">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                    <Button Grid.Column="1" Grid.Row="1" Margin="0,0,20,10" Width="200" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="#00ABABAB" Cursor="Hand" Click="btnUpdate_Click">

                        <Button.Background>
                            <ImageBrush ImageSource="/Img/updateTheCategory.png"/>
                        </Button.Background>

                    </Button>
                </Grid>
            </Border>
            <Ellipse Height="90" Width="90" Canvas.Left="85" Canvas.Top="25" HorizontalAlignment="Left" VerticalAlignment="Top" Panel.ZIndex="3" StrokeThickness="35">
                <Ellipse.Effect>
                    <DropShadowEffect/>
                </Ellipse.Effect>
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/Img/category.png"/>
                </Ellipse.Fill>

            </Ellipse>
        </Canvas>
    </Grid>

</Window>
