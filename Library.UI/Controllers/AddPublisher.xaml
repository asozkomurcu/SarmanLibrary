<Window x:Class="AddPublisher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.UI" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        mc:Ignorable="d"
        Title="AddPublisher" Height="350" Width="700" AllowsTransparency="True" WindowStyle="None" Background="Transparent" WindowStartupLocation="CenterScreen">
    <Grid>
        <Canvas>
            <Label MouseLeftButtonDown="DragMove" Content="YAYINEVİ EKLEME PENCERESİ" Canvas.Left="193" Canvas.Top="71" Width="262" Panel.ZIndex="3" FontFamily="Comic Sans MS" FontSize="16" FontWeight="Bold" Foreground="#FFF9F9F9" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Rectangle MouseLeftButtonDown="DragMove" Fill="Chocolate" Height="30" Width="440" Canvas.Left="130" Canvas.Top="70" HorizontalAlignment="Center" VerticalAlignment="Top" Panel.ZIndex="2"/>
            <Border  Height="159" Width="440" Canvas.Left="130" Canvas.Top="100" Background="#f9f9f9" CornerRadius="0,0,50,50" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Border.Effect>
                    <DropShadowEffect Opacity="0.35" Direction="275"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Grid.Row="0" BorderBrush="#f0e9d9" BorderThickness="0,0,0,1">
                        <Label Content="Yayınevi Adı :" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontFamily="Comic Sans MS" Foreground="#FF37251C" FontWeight="Bold" />

                    </Border>
                    <Border Grid.Column="0" Grid.Row="1" BorderBrush="#f0e9d9" BorderThickness="0,0,0,1">
                        <Label Content="Detaylar :" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontFamily="Comic Sans MS" Foreground="#FF37251C" FontWeight="Bold" />

                    </Border>
                    <Image Grid.Column="0" Grid.Row="4" Margin="10,10,10,10" x:Name="windowClose" Source="/Img/Close.png" Cursor="Hand" MouseDown="windowClose_Click" Style="{DynamicResource imageButton}">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>


                    <Border Grid.Column="1" Grid.Row="0">
                        <TextBox x:Name="tbxPublisherName" TextWrapping="Wrap" Background="#99F9F9F9" FontFamily="Comic Sans MS" BorderBrush="Transparent" BorderThickness="1,1,1,1"
                                 Foreground="#FF37251C" FontWeight="Bold" Padding="40,10" FontSize="16"
                                 Text="{Binding Name, Mode=TwoWay}" />
                    </Border>
                    <Border Grid.Column="1" Grid.Row="1">
                        <TextBox x:Name="tbxPublisherDescription" TextWrapping="Wrap" Background="#99F9F9F9" FontFamily="Comic Sans MS" BorderBrush="Transparent" BorderThickness="1,1,1,1"
                                 Foreground="#FF37251C" FontWeight="Bold" Padding="40,10" FontSize="16"
                                 Text="{Binding Description, Mode=TwoWay}" />
                    </Border>

                    <Button Grid.Column="1" Grid.Row="2" Margin="10,10,10,10"  x:Name="addPublisher" Command="{Binding AddPublisherCommand}"  BorderBrush="#00ABABAB" Cursor="Hand">

                        <Button.Background>
                            <ImageBrush ImageSource="/Img/addTheAuthor.png"/>
                        </Button.Background>
                    </Button>
                </Grid>
            </Border>
            <Ellipse MouseLeftButtonDown="DragMove" Height="90" Width="90" Canvas.Left="85" Canvas.Top="25" HorizontalAlignment="Left" VerticalAlignment="Top" Panel.ZIndex="3" StrokeThickness="35">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/Img/author.png"/>
                </Ellipse.Fill>
                <Ellipse.Effect>
                    <DropShadowEffect/>
                </Ellipse.Effect>


            </Ellipse>
        </Canvas>
    </Grid>

</Window>
