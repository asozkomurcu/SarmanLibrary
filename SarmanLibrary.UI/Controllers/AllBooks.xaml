<UserControl x:Class="AllBooks"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SarmanLibrary.UI"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Border  Grid.Row="0">
            <DataGrid BorderBrush="{x:Null}" BorderThickness="0"/>
        </Border>
        <Border Background="#f9f9f9" Grid.Row="1">

            <Button Click="Button_Click" Margin="1158,10,44,50">
                <Button.Background>
                    <ImageBrush ImageSource="/addBook.png"/>
                </Button.Background>
            </Button>

        </Border>
    </Grid>
</UserControl>
